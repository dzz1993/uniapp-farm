<view class="content-page page"><view class="row-wrap"><view class="label">联系人</view><view class="label-right"><input class="input" type="text" placeholder="请输入姓名" data-event-opts="{{[['input',[['getPeopleName',['$event']]]]]}}" value="{{name}}" bindinput="__e"/></view></view><view class="row-wrap"><view class="label">手机号码</view><view class="label-right"><input class="input" maxlength="11" type="number" placeholder="11位手机号码" data-event-opts="{{[['input',[['getPeoplePhone',['$event']]]]]}}" value="{{phone}}" bindinput="__e"/></view></view><view data-event-opts="{{[['tap',[['showDistpicker',['$event']]]]]}}" class="row-wrap" bindtap="__e"><view class="label">选择地区</view><view class="label-right">{{''+area_address+''}}</view></view><block wx:if="{{is_showDistpicker}}"><view class="distpicker"><view class="distpicker-btn"><view data-event-opts="{{[['tap',[['distpickerCancel',['$event']]]]]}}" class="distpicker-cancel-btn" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['distpickerSure',['$event']]]]]}}" class="distpicker-sure-btn" bindtap="__e">确定</view></view><picker-view class="distpicker-content" indicator-style="{{indicatorStyle}}" value="{{value}}" data-event-opts="{{[['change',[['bindChange',['$event']]]]]}}" bindchange="__e"><picker-view-column><block wx:for="{{provinceList}}" wx:for-item="item" wx:for-index="province" wx:key="province"><view class="area-item">{{item.province_name}}</view></block></picker-view-column><picker-view-column><block wx:for="{{cityList}}" wx:for-item="item" wx:for-index="city" wx:key="city"><view class="area-item">{{item.city_name}}</view></block></picker-view-column><picker-view-column><block wx:for="{{areaList}}" wx:for-item="item" wx:for-index="city" wx:key="city"><view class="area-item">{{item.area_name}}</view></block></picker-view-column></picker-view></view></block><view class="row-wrap"><view class="label">详细地址</view><view class="label-right"><input class="input" type="text" placeholder="街道门牌信息" data-event-opts="{{[['input',[['getAddressDetail',['$event']]]]]}}" value="{{addressDetails}}" bindinput="__e"/></view></view><view class="row-wrap-switch"><view class="label">设置默认地址</view><view class="label-right"><block wx:if="{{is_default==1}}"><image class="box-switch-img" src="https://aoyifarm.oss-cn-beijing.aliyuncs.com/icon/switch_true.png" data-event-opts="{{[['tap',[['onYeBoxClcik',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image class="box-switch-img" src="https://aoyifarm.oss-cn-beijing.aliyuncs.com/icon/switch_false.png" data-event-opts="{{[['tap',[['onYeBoxClcik',['$event']]]]]}}" bindtap="__e"></image></block></view></view><button data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="save-btn" bindtap="__e">保存</button><block wx:if="{{is_showDistpicker}}"><view class="mask" catchtap="distpickerCancel"></view></block></view>